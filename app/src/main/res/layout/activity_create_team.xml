<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <include
        android:id="@+id/custom_toolbar_content"
        layout="@layout/custom_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_toolbar_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <View
                android:id="@+id/top_view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/reservation_content"
                layout="@layout/reservation_form_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/top_view" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_view_location"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/rounded_btn"
                android:backgroundTint="@color/color_techer"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/view_coordinates"
                android:textColor="@color/color_white"
                android:textSize="8pt"
                app:layout_constraintEnd_toStartOf="@id/btn_space"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/reservation_content" />

            <Space
                android:id="@+id/btn_space"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/tv_book_now"
                app:layout_constraintStart_toEndOf="@id/tv_view_location"
                app:layout_constraintTop_toTopOf="@id/tv_book_now" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_book_now"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_btn"
                android:gravity="center"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/color_techer"
                android:paddingEnd="10dp"
                android:text="@string/create_team"
                android:textColor="@color/color_white"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toEndOf="@id/btn_space"
                app:layout_constraintTop_toTopOf="@id/tv_view_location" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_book_now" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>