<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:background="@color/color_white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/top_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <atiaf.mehany.Customecalss.TextViewWithFont
            android:id="@+id/tv_team_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:text="(8/5)"
            android:textStyle="bold"
            android:textColor="@color/color_blue"
            android:textSize="8pt"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/top_view"
            app:layout_constraintStart_toStartOf="@id/top_view" />

        <atiaf.mehany.Customecalss.TextViewWithFont
            android:id="@+id/tv_team_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:text="(8/5)"
            android:textStyle="bold"
            android:textColor="@color/color_blue"
            android:textSize="8pt"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/top_view"
            app:layout_constraintEnd_toEndOf="@id/top_view"/>


        <atiaf.mehany.Customecalss.TextViewWithFont
            android:id="@+id/tv_place_title_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:visibility="gone"
            android:text="@string/place_name"
            android:textColor="@color/color_dark_grey"
            android:textSize="8pt"
            app:layout_constraintEnd_toEndOf="@id/top_view"
            app:layout_constraintStart_toStartOf="@id/top_view"
            app:layout_constraintTop_toBottomOf="@id/tv_team_id"/>

        <atiaf.mehany.Customecalss.TextViewWithFont
            android:id="@+id/tv_place_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:text="@string/place_title"
            android:textColor="@color/color_back_dark"
            android:textSize="8pt"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="@id/top_view"
            app:layout_constraintTop_toBottomOf="@id/tv_place_title_label"
            app:layout_constraintEnd_toEndOf="@id/top_view" />


        <atiaf.mehany.Customecalss.TextViewWithFont
            android:id="@+id/tv_place_address_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:visibility="gone"
            android:text="@string/address"
            android:textColor="@color/color_dark_grey"
            android:textSize="8pt"
            app:layout_constraintTop_toBottomOf="@id/tv_place_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <atiaf.mehany.Customecalss.TextViewWithFont
            android:id="@+id/tv_address_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:text="@string/place_title"
            android:textColor="@color/color_dark_grey"
            android:textSize="7pt"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_place_address_label"
            app:layout_constraintEnd_toEndOf="@id/top_view"
            app:layout_constraintStart_toStartOf="@id/top_view" />
        <atiaf.mehany.Customecalss.TextViewWithFont
            android:id="@+id/tv_place_phone_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:text="@string/address"
            android:visibility="gone"
            android:textColor="@color/color_dark_grey"
            android:textSize="8pt"
            app:layout_constraintTop_toBottomOf="@id/tv_address_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <atiaf.mehany.Customecalss.TextViewWithFont
            android:id="@+id/tv_phone_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:text="@string/place_title"
            android:textColor="@color/color_dark_grey"
            android:textSize="7pt"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_place_phone_label"
            app:layout_constraintEnd_toEndOf="@id/top_view"
            app:layout_constraintStart_toStartOf="@id/top_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>