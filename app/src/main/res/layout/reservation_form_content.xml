<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <View
        android:id="@+id/top_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <atiaf.mehany.Customecalss.TextViewWithFont
        android:id="@+id/tv_name_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="start"
        android:text="@string/name_txt"
        android:textColor="@color/color_dark_grey"
        android:textSize="7pt"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toTopOf="@id/top_view" />

    <EditText
        android:id="@+id/et_name_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/color"
        android:lines="1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toBottomOf="@id/tv_name_title" />


    <atiaf.mehany.Customecalss.TextViewWithFont
        android:id="@+id/tv_address_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:gravity="start"
        android:text="@string/address"
        android:textColor="@color/color_dark_grey"
        android:textSize="7pt"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toBottomOf="@id/et_name_title" />

    <EditText
        android:id="@+id/et_address_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/color"
        android:lines="1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toBottomOf="@id/tv_address_title" />


    <atiaf.mehany.Customecalss.TextViewWithFont
        android:id="@+id/tv_phone_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:gravity="start"
        android:text="@string/phone_number"
        android:textColor="@color/color_dark_grey"
        android:textSize="7pt"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toBottomOf="@id/et_address_title" />

    <EditText
        android:id="@+id/et_phone_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/color"
        android:inputType="phone"
        android:lines="1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_title" />

    <atiaf.mehany.Customecalss.TextViewWithFont
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/color"
        android:gravity="start"
        android:includeFontPadding="false"
        android:paddingStart="10dp"
        android:paddingTop="7dp"
        android:paddingEnd="10dp"
        android:paddingBottom="7dp"
        android:text="@string/select_date"
        android:textColor="@color/color_dark_grey"
        android:textSize="7pt"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toBottomOf="@id/et_phone_title" />

    <atiaf.mehany.Customecalss.TextViewWithFont
        android:id="@+id/tv_hours_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="start"
        android:inputType="number"
        android:text="@string/number_hours"
        android:textColor="@color/color_dark_grey"
        android:textSize="7pt"
        app:layout_constraintBottom_toBottomOf="@id/et_hours_title"
        app:layout_constraintEnd_toStartOf="@id/et_hours_title"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toTopOf="@id/et_hours_title" />

    <EditText
        android:id="@+id/et_hours_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/color"
        android:lines="1"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toEndOf="@id/tv_hours_title"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

    <atiaf.mehany.Customecalss.TextViewWithFont
        android:id="@+id/tv_number_players_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="start"
        android:text="@string/number_players"
        android:textColor="@color/color_dark_grey"
        android:textSize="7pt"
        app:layout_constraintBottom_toBottomOf="@id/et_number_players_title"
        app:layout_constraintEnd_toStartOf="@id/et_number_players_title"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toTopOf="@id/et_number_players_title" />

    <EditText
        android:id="@+id/et_number_players_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/color"
        android:inputType="number"
        android:lines="1"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toEndOf="@id/tv_number_players_title"
        app:layout_constraintTop_toBottomOf="@id/et_hours_title" />

    <atiaf.mehany.Customecalss.TextViewWithFont
        android:id="@+id/tv_note_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:gravity="start"
        android:text="@string/note"
        android:textColor="@color/color_dark_grey"
        android:textSize="7pt"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toBottomOf="@id/et_number_players_title" />

    <EditText
        android:id="@+id/et_note_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/color"
        android:gravity="top|start"
        android:lines="4"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/top_view"
        app:layout_constraintStart_toStartOf="@id/top_view"
        app:layout_constraintTop_toBottomOf="@id/tv_note_title" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/reservation_group_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_hours_title,et_hours_title,tv_date" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/reservation_group_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_number_players_title,et_number_players_title" />
</androidx.constraintlayout.widget.ConstraintLayout>