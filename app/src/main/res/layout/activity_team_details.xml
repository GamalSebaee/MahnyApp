<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <include
        android:id="@+id/custom_toolbar_content"
        layout="@layout/custom_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_toolbar_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <View
                android:id="@+id/top_view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_team_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:text="(8/5)"
                android:textStyle="bold"
                android:textColor="@color/color_blue"
                android:textSize="8pt"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_team_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:text="(8/5)"
                android:textStyle="bold"
                android:textColor="@color/color_blue"
                android:textSize="8pt"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/top_view"
                app:layout_constraintEnd_toEndOf="@id/top_view"/>

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_place_title_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:text="@string/place_name"
                android:textColor="@color/color_dark_grey"
                android:textSize="8pt"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_team_id" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_place_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:text="@string/place_title"
                android:textColor="@color/color_back_dark"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_team_id" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_place_address_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="@string/address"
                android:textColor="@color/color_dark_grey"
                android:textSize="8pt"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_place_title" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_address_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:text="@string/place_title"
                android:textColor="@color/color_dark_grey"
                android:textSize="7pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_place_address_label" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_place_phone_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="@string/address"
                android:textColor="@color/color_dark_grey"
                android:textSize="8pt"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_address_title" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_phone_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:text="@string/place_title"
                android:textColor="@color/color_dark_grey"
                android:textSize="7pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_place_phone_label" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_email_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:visibility="gone"
                android:text="@string/place_title"
                android:textColor="@color/color_dark_grey"
                android:textSize="7pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_title" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_place_note_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:text="@string/note"
                android:textColor="@color/color_black"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_email_title" />


            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_note_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:text="@string/place_title"
                android:textColor="@color/color_dark_grey"
                android:textSize="7pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_place_note_label" />
            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_team_joiners_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start"
                android:text="@string/team_joiners"
                android:textColor="@color/colorAccent"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_note_title" />
            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_team_joiners_empty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/no_members"
                android:textColor="@color/color_red"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@id/tv_team_joiners_label"
                app:layout_constraintStart_toStartOf="@id/tv_team_joiners_label"
                app:layout_constraintTop_toBottomOf="@id/tv_team_joiners_label" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_team_joiners"
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_team_joiners_empty"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                android:layout_height="wrap_content" />


            <include
                android:id="@+id/reservation_content"
                layout="@layout/reservation_form_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/rv_team_joiners" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_view_location"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/rounded_btn"
                android:backgroundTint="@color/color_techer"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/view_coordinates"
                android:textColor="@color/color_white"
                android:textSize="8pt"
                app:layout_constraintEnd_toStartOf="@id/btn_space"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/reservation_content" />

            <Space
                android:id="@+id/btn_space"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/tv_book_now"
                app:layout_constraintStart_toEndOf="@id/tv_view_location"
                app:layout_constraintTop_toTopOf="@id/tv_book_now" />

            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_book_now"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_btn"
                android:gravity="center"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/color_techer"
                android:paddingEnd="10dp"
                android:text="@string/join_now"
                android:textColor="@color/color_white"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toEndOf="@id/btn_space"
                app:layout_constraintTop_toTopOf="@id/tv_view_location" />
            <atiaf.mehany.Customecalss.TextViewWithFont
                android:id="@+id/tv_user_is_joined_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/user_is_joined"
                android:textColor="@color/colorAccent"
                android:textSize="8pt"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_book_now" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="@id/top_view"
                app:layout_constraintStart_toStartOf="@id/top_view"
                app:layout_constraintTop_toBottomOf="@id/tv_user_is_joined_label" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>